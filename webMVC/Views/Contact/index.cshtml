@model List<webMVC.Models.ContactData>

    @{
    ViewBag.Title = "Contact";
    Layout = "_Layout";
}

<h2>Contacts</h2>

<a class="btn btn-primary" href="/Contact/Create" role="button">Create</a>

<table class="table">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Id</th>
        <th scope="col">FirstName</th>
        <th scope="col">LastName</th>
        <th scope="col">Email</th>
        <th scope="col">Mobile</th>
        <th scope="col">Action</th>
    </tr>
    @* @foreach (var item in Model) *@
    @for(int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        <tr>
            <td>@(i + 1)</td>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td><a href="Edit/@item.Id"><i class="fa fa-pen"></i></a> <a href="Delete/@item.Id"><i class="fa fa-trash"></i></a></td>
        </tr>
    }
    
</table>